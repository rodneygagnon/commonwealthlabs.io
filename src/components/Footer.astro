---
const currentYear = new Date().getFullYear();

const links = [
  { href: '/about', label: 'About' },
  { href: '/network', label: 'Network' },
  { href: '/join', label: 'Join' },
  { href: 'https://github.com/rodneygagnon/qckstrt', label: 'GitHub', external: true },
  { href: 'https://github.com/rodneygagnon/qckstrt/blob/main/docs/README.md', label: 'Docs', external: true },
];
---

<footer class="bg-slate-dark text-white/70">
  <div class="container mx-auto px-6 py-12 max-w-5xl">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-8">
      <div>
        <img
          src="/logos/svg/cwlabs-horizontal-dark.svg"
          alt="Commonwealth Labs"
          class="h-6 mb-3 opacity-70"
        />
        <p class="text-sm">
          Open-source civic technology
        </p>
      </div>

      <ul class="flex flex-wrap gap-x-8 gap-y-2">
        {links.map(link => (
          <li>
            <a
              href={link.href}
              target={link.external ? '_blank' : undefined}
              rel={link.external ? 'noopener noreferrer' : undefined}
              class="text-sm hover:text-white transition-colors"
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <div class="border-t border-white/5 mt-10 pt-6">
      <p class="text-xs">
        &copy; {currentYear} Commonwealth Labs
      </p>
    </div>
  </div>
</footer>
