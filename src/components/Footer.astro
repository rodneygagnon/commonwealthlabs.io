---
const currentYear = new Date().getFullYear();

const links = [
  { href: '/platform', label: 'Platform' },
  { href: '/about', label: 'About' },
  { href: '/why', label: 'Why' },
  { href: '/network', label: 'Network' },
  { href: '/open-source', label: 'Open Source' },
  { href: '/get-involved', label: 'Get Involved' },
  { href: '/privacy', label: 'Privacy' },
  { href: 'https://medium.com/@opuspopuli', label: 'Blog', external: true },
];
---

<footer class="bg-slate-dark text-white/70">
  <div class="container mx-auto px-6 py-12 max-w-5xl">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-8">
      <div>
        <img
          src="/logos/svg/op-horizontal-dark.svg"
          alt="Opus Populi"
          class="h-6 mb-3 opacity-70"
        />
        <p class="text-sm">
          Civic tools built by citizens
        </p>
      </div>

      <ul class="flex flex-wrap gap-x-8 gap-y-2">
        {links.map(link => (
          <li>
            <a
              href={link.href}
              class="text-sm hover:text-white transition-colors"
              target={link.external ? '_blank' : undefined}
              rel={link.external ? 'noopener noreferrer' : undefined}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <div class="border-t border-white/5 mt-10 pt-6">
      <p class="text-xs">
        &copy; {currentYear} Opus Populi
      </p>
    </div>
  </div>
</footer>
