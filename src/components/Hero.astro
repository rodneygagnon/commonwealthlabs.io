---
interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  secondaryCtaText?: string;
  secondaryCtaHref?: string;
}

const {
  title,
  subtitle,
  ctaText,
  ctaHref,
  secondaryCtaText,
  secondaryCtaHref,
} = Astro.props;
---

<section class="bg-slate-dark text-white py-24 md:py-32">
  <div class="container mx-auto px-6">
    <div class="max-w-2xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-semibold mb-6 tracking-tight">
        {title}
      </h1>
      {subtitle && (
        <p class="text-lg text-white/70 mb-10 leading-relaxed">
          {subtitle}
        </p>
      )}
      {(ctaText || secondaryCtaText) && (
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          {ctaText && ctaHref && (
            <a
              href={ctaHref}
              class="inline-flex items-center justify-center bg-slate-dark text-white border border-white px-6 py-3 rounded-md hover:bg-slate-dark/90 transition-colors font-medium"
            >
              {ctaText}
            </a>
          )}
          {secondaryCtaText && secondaryCtaHref && (
            <a
              href={secondaryCtaHref}
              class="inline-flex items-center justify-center text-white/80 px-6 py-3 rounded-md hover:text-white transition-colors font-medium"
            >
              {secondaryCtaText}
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</section>
