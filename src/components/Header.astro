---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/platform', label: 'Platform' },
  { href: '/about', label: 'About' },
  { href: '/why', label: 'Why' },
  { href: '/network', label: 'Network' },
  { href: '/open-source', label: 'Open Source' },
  { href: '/get-involved', label: 'Get Involved' },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-slate-dark text-white">
  <nav class="container mx-auto px-6 py-5 max-w-5xl">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center">
        <img
          src="/logos/svg/op-horizontal-dark.svg"
          alt="Opus Populi"
          class="h-8"
        />
      </a>

      <ul class="hidden md:flex items-center gap-6">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class:list={[
                'text-sm text-white/80 hover:text-white transition-colors',
                { 'text-white': currentPath === link.href }
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-white/80"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <div id="mobile-menu" class="hidden md:hidden mt-6 pb-4 border-t border-white/10 pt-6">
      <ul class="flex flex-col gap-4">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class:list={[
                'block text-sm text-white/80 hover:text-white transition-colors',
                { 'text-white': currentPath === link.href }
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    const isExpanded = menuBtn.getAttribute('aria-expanded') === 'true';
    menuBtn.setAttribute('aria-expanded', String(!isExpanded));
    mobileMenu?.classList.toggle('hidden');
  });
</script>
